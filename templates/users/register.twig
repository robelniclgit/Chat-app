{% extends "layouts/base.twig" %}

{% block body %}
    <h1>{{ title }}</h1>
    <p>REGISTER : Welcome to {{ title }}</p>
    <div class="centered">
        <form id="form-register-user">
            <div class="form-field">
                <label for="email">email</label>
                <input type="text" name="email" id="email" autofocus/>
            </div>
            <div class="form-field">
                <label for="firstname">firstname</label>
                <input type="text" name="firstname" id="firstname" autofocus/>
            </div>
            <div class="form-field">
                <label for="lastname">lastname</label>
                <input type="text" name="lastname" id="lastname" autofocus/>
            </div>
            <div class="form-field">
                <label for="username">username</label>
                <input type="text" name="username" id="username" autofocus/>
            </div>
            <div class="form-field">
                <label for="password">password</label>
                <input type="text" name="password" id="password" autofocus/>
            </div>
            <div class="form-field">
                <button>Enregistrer</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $("#form-register-user").on("submit", function(e){
            e.preventDefault();
            $.post('/registerSave', $(this).serializeArray(), function(response){
                console.log(response);
                alert(response.message);
            });
        });
    </script>
{% endblock %}